<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Mobile Test Suite" verbose="2">
	<listeners>
		<listener class-name="com.sogeti.dia.common.listeners.TestListeners"></listener>
		<listener class-name="com.sogeti.dia.common.listeners.SuiteListeners"></listener>
	</listeners>
	
	<parameter name="interfaceType" value="Mobile"/> <!-- Desktop/Mobile -->			
	<parameter name="environment" value="Local"/> <!-- Local, SauceLabs -->
	<parameter name="appType" value="Native"/> <!-- Native, Hybrid, Web -->		
	<parameter name="language" value="English"/> <!-- English, Spanish -->	
	<parameter name="launchExistingApp" value="No"/> <!-- Native, Hybrid, Web -->		
		
	<test name="Mobile Catalogue Test">	
		<parameter name="deviceName" value="Galaxy Nexus API 24"/>
		<parameter name="platformName" value="Android"/> <!-- Android, iOS -->			
		<parameter name="platformVersion" value="7.0"/>
		<parameter name="ipaddress" value="127.0.0.0"/>	
		<parameter name="udid" value="emulator-5554"/>	
		<parameter name="androidAPK" value="app-release.apk"/>
		<parameter name="appPackage" value="id.ihwan.jetpackpro"/>
		<parameter name="appActivity" value="id.ihwan.jetpackpro.home.HomeActivity"/>			
		
		<classes>
			<class name="com.client.app.testrunner.RunCucumberFeatures_2"/>
		</classes>
	</test>
</suite>