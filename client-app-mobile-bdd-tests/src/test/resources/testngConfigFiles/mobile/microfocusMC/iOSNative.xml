<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DIA Test Suite" verbose="2">
	<listeners>
		<listener class-name="com.sogeti.dia.common.listeners.TestListeners"></listener>
		<listener class-name="com.sogeti.dia.common.listeners.SuiteListeners"></listener>
	</listeners>
			
	<parameter name="interfaceType" value="Mobile"/> <!-- Desktop/Mobile -->	
	<parameter name="environment" value="MICROFOCUSMC"/> <!-- Local, SauceLabs -->
	<parameter name="appType" value="Native"/> <!-- Native, Hybrid, Web -->
	<parameter name="language" value="English"/> <!-- English, Spanish -->			
	
	<test name="DIA Regression Test">		
		<parameter name="deviceName" value="iPhone 7 Plus"/>
		<parameter name="platformName" value="iOS"/> <!-- Android, iOS -->
		<parameter name="platformVersion" value="11.2.5"/>		
		<parameter name="bundleId" value="com.Sogeti.EmployeeManagement"></parameter>			
			
		<classes>
			<class name="com.client.app.testrunner.RunCucumberFeatures_1"/>
		</classes>
	</test>
</suite>