<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DIA Test Suite" verbose="2">
	<listeners>
		<listener class-name="com.sogeti.dia.common.listeners.TestListeners"></listener>
		<listener class-name="com.sogeti.dia.common.listeners.SuiteListeners"></listener>
	</listeners>
			
	<parameter name="interfaceType" value="Mobile"/> <!-- Desktop/Mobile -->			
	<parameter name="environment" value="BrowserStack"/> <!-- Local, SauceLabs -->
	<parameter name="appType" value="Web"/> <!-- Native, Hybrid, Web -->
	<parameter name="language" value="English"/> <!-- English, Spanish -->
	
	<test name="DIA Regression Test">		
		<parameter name="project" value="Android Web"/>
		<parameter name="build" value="Demo"/>
		<parameter name="name" value="Demo"/>	
		<parameter name="platformName" value="Android"/>
		<parameter name="platformVersion" value="6.0"/>
		<parameter name="deviceName" value="Google Nexus 6"/>
		<parameter name="browserName" value="chrome"/>
		
		<classes>
			<class name="com.client.app.testrunner.RunCucumberFeatures_2"/>
		</classes>
	</test>
</suite>
