<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DIA Test Suite" verbose="2"> <!--  parallel="tests" thread-count="2"> -->
	<listeners>
		<listener class-name="com.sogeti.dia.common.listeners.TestListeners"></listener>
		<listener class-name="com.sogeti.dia.common.listeners.SuiteListeners"></listener>
	</listeners>
	
	<parameter name="interfaceType" value="Desktop"/> <!-- Desktop/Mobile -->
	<parameter name="environment" value="Local"/> <!-- Local, SauceLabs -->				
	<parameter name="appType" value="Web"/> <!-- Native, Hybrid, Web -->
	<parameter name="language" value="English"/> <!-- English, Spanish -->				
		
	<test name="DIA Regression Test">														
		<parameter name="browserName" value="Chrome"/>
					
		<classes>
			<class name="com.client.app.testrunner.RunCucumberFeatures_2"/>
		</classes>
	</test>	
</suite>
